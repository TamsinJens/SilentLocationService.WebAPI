@using SilentLocationService.WebAPI.ViewModels
@model LocationDetailVM

<style>
    .list-group-item {
        margin-top: 0.3%
    }

    input {
        text-align: center;
    }

    .switch {
        position: relative;
        display: inline-block;
        width: 60px;
        height: 34px;
        margin-right: 10%
    }

        .switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }

    .slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #ccc;
        -webkit-transition: .4s;
        transition: .4s;
    }

        .slider:before {
            position: absolute;
            content: "";
            height: 26px;
            width: 26px;
            left: 4px;
            bottom: 4px;
            background-color: white;
            -webkit-transition: .4s;
            transition: .4s;
        }

    input:checked + .slider {
        background-color: #2196F3;
    }

    input:focus + .slider {
        box-shadow: 0 0 1px #2196F3;
    }

    input:checked + .slider:before {
        -webkit-transform: translateX(26px);
        -ms-transform: translateX(26px);
        transform: translateX(26px);
    }

    /* Rounded sliders */
    .slider.round {
        border-radius: 34px;
    }

        .slider.round:before {
            border-radius: 50%;
        }

    input, select, textarea {
        width: 40%;
        float: right;
        margin-right: 28%;
        resize: none;
        text-align: center;
    }

        input[type = "submit"] {
            width: 10%;
            float: none;
            margin-right: 0%;
            text-align: center;
        }

    .form-control {
        width: 40%;
    }

    label {
        font-weight: bold;
    }

    h1 {
        text-align: center;
        font-weight: bold;
        text-shadow: 5px 0 0 #000, 0 -5px 0 #000, 0 5px 0 #000, -5px 0 0 #000;
        color: white;
    }
</style>

@Html.AntiForgeryToken()
<a asp-controller="Locations" asp-action="Detail" asp-route-id="@Model.LocationDetail.id" class="btn btn-primary" style="float: left">&#129044;</a>

<h1 style="text-align: center">
    Edit @Model.LocationDetail.name
</h1>


<div class="panel panel-default">
    <div class="panel-heading">
    </div>
    <form method="POST">
        <div class="panel-body list-group">
            <div class="form-group">
                @Html.LabelFor(model => model.LocationDetail.id, htmlAttributes: new { @class = "control-label col-md-2", @hidden = "hidden" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.LocationDetail.id, new { htmlAttributes = new { @class = "form-control", @hidden = "hidden" } })
                    @Html.ValidationMessageFor(model => model.LocationDetail.id, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group list-group-item">
                @Html.LabelFor(model => model.LocationDetail.name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.LocationDetail.name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.LocationDetail.name, "", new { @class = "text-danger" })
                </div>
            </div>
            <ul class="list-group" style="list-style-type:none">
                <li class="list-group-item">
                    <div class="form-group">
                        @Html.LabelFor(model => model.LocationDetail.coordinates, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.LocationDetail.coordinates, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                            @Html.ValidationMessageFor(model => model.LocationDetail.coordinates, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </li>
                <li class="list-group-item">
                    <div class="form-group">
                        @Html.LabelFor(model => model.LocationDetail.description, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextAreaFor(model => model.LocationDetail.description, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.LocationDetail.description, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </li>
                <li class="list-group-item">
                    <div class="form-group">
                        @Html.LabelFor(model => model.LocationDetail.backgroundColor, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(m => m.LocationDetail.backgroundColor,
                                new SelectList(Enum.GetValues(typeof(Color))))
                        </div>
                    </div>
                </li>

            </ul>
            <div class="list-group-item" style="margin-top: 1%; text-align: center">
                <div class="form-group">
                    <input type="submit" value="&#10003;" class="btn btn-success" asp-route-id="add" />
                </div>
            </div>
        </div>
        <br />
    </form>
    <div class="panel-footer">
    </div>
</div>